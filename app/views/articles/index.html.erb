<!-- app/views/home/index.html.erb -->
<div class="jumbotron text-center">
  <h1 class="display-4">Welcome to Tech Tarzons</h1>
  <p class="lead">Explore the latest tech articles and stay updated with the latest trends.</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Latest Articles</h2>

      <% @articles.each do |article| %>
        <div class="article-preview">
          <h3><%= link_to article.title, article %></h3>
          <p class="text-muted">Published by: </p>
          <p><%= article.body.truncate_words(30) %></p>
          <%= link_to 'Read more', article, class: 'btn btn-primary btn-sm' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <!-- Add any additional content or widgets for the sidebar -->
    </div>
  </div>
</div>
